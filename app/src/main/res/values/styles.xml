<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="customizeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">@dimen/left</item>
        <item name="android:layout_marginTop">@dimen/top</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="textViewCustomize">
        <item name="android:layout_marginLeft">@dimen/top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/left</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="answerImage">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">@dimen/width</item>
        <item name="android:layout_marginLeft">@dimen/left</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>
<style name="last_two_buttons">
    <item name="android:padding">10dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">#00BCD4</item>
</style>

</resources>
